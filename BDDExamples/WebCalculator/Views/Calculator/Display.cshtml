@model SimpleCalculator.Calculator

@{
    ViewBag.Title = "Calculator";
}

<h2>Simple Calculator</h2>
<div class="panel panel-default">
    <div id="Display" class="panel-body"></div>
</div>
@using (Ajax.BeginForm("Add", new { }, new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "Display" }, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label for="firstNumber">Number 1</label>
        @Html.TextBox("firstNumber", "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="secondNumber">Number 2</label>
        @Html.TextBox("secondNumber", "", new { @class = "form-control" })
    </div>
    <button type="submit" id="add" class="btn btn-default">Add</button>
}

